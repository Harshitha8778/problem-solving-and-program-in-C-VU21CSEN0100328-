// Online C compiler to run C program online
#include <stdio.h>

int main() {
    int x,y,*a,*b,temp;
    printf("enter the value of x: ");
    scanf("%d",&x);
    printf("enter the value of y: ");
    scanf("%d",&y);
    printf("before swapping, the value of x=%d\n the value of y=%d\n",x,y);
    a=&x;
    b=&y;
    temp=*b;
    *b=*a;
    *a=temp;
     printf("after swapping, the value of x=%d\n the value of y=%d",x,y);
    
    return 0;
}
